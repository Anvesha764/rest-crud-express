<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Posts</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Quora Posts</h1>

    <% for(post of posts){ %>
      <div class="post">
        <h3 class="user">@<%= post.username %></h3>
        <p class="content"><%= post.content %></p>

        <a class="btn btn-secondary" href="/posts/<%= post.id %>">View</a>
        <a class="btn btn-primary" href="/posts/<%= post.id %>/edit">Edit</a>

        <form class="delete-form" method="post" action="/posts/<%= post.id %>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    <% } %>

    <br>
    <a class="btn btn-primary" href="/posts/new">+ Create New Post</a>
  </div>

  <script src="/app.js"></script>
</body>
</html>
